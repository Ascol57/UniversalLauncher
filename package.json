{
  "name": "nexus-launcher",
  "version": "1.0.8",
  "description": "A simple Minecraft launcher built with Electron and minecraft-java-core.",
  "main": "index.js",
  "author": "Ascol57 <constant.rusche@gmail.com>",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "dotenv": "^17.2.3",
    "minecraft-java-core": "^4.2.5"
  },
  "build": {
    "appId": "fr.ascol.launcher",
    "productName": "Nexus Launcher",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "differentialPackage": false
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}